.PHONY: up build up-build down clean logs ps help

DC=docker compose
DEFAULT_SERVICE=api

# –ó–∞–ø—É—Å—Ç–∏—Ç—å —Å–µ—Ä–≤–∏—Å—ã (–∏—Å–ø–æ–ª—å–∑–æ–≤–∞—Ç—å —É–∂–µ —Å–æ–±—Ä–∞–Ω–Ω—ã–µ –æ–±—Ä–∞–∑—ã)
up:
	@echo -e "\nüöÄ [UP] –ó–∞–ø—É—Å–∫ –≤—Å–µ—Ö —Å–µ—Ä–≤–∏—Å–æ–≤... –ü–æ–∂–∞–ª—É–π—Å—Ç–∞, –ø–æ–¥–æ–∂–¥–∏—Ç–µ ‚ú®\n"
	$(DC) up -d
	@echo -e "\n‚úÖ –°–µ—Ä–≤–∏—Å—ã –∑–∞–ø—É—â–µ–Ω—ã!\n"

# –°–æ–±—Ä–∞—Ç—å –æ–±—Ä–∞–∑—ã
build:
	@echo -e "\nüî® [BUILD] –°–±–æ—Ä–∫–∞ –æ–±—Ä–∞–∑–æ–≤...\n"
	$(DC) build
	@echo -e "\n‚úÖ –°–±–æ—Ä–∫–∞ –∑–∞–≤–µ—Ä—à–µ–Ω–∞!\n"

# –°–æ–±—Ä–∞—Ç—å –æ–±—Ä–∞–∑—ã –∏ –∑–∞–ø—É—Å—Ç–∏—Ç—å —Å–µ—Ä–≤–∏—Å—ã
up-build: build up

# –û—Å—Ç–∞–Ω–æ–≤–∏—Ç—å —Å–µ—Ä–≤–∏—Å—ã
down:
	@echo -e "\nüõë [DOWN] –û—Å—Ç–∞–Ω–æ–≤–∫–∞ –≤—Å–µ—Ö —Å–µ—Ä–≤–∏—Å–æ–≤...\n"
	$(DC) down
	@echo -e "\n‚úÖ –í—Å–µ —Å–µ—Ä–≤–∏—Å—ã –æ—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω—ã.\n"

# –£–¥–∞–ª–∏—Ç—å –∫–æ–Ω—Ç–µ–π–Ω–µ—Ä—ã, —Å–µ—Ç–∏ –∏ —Ç–æ–º–∞
clean:
	@echo -e "\nüßπ [CLEAN] –û—á–∏—Å—Ç–∫–∞: —É–¥–∞–ª–µ–Ω–∏–µ –∫–æ–Ω—Ç–µ–π–Ω–µ—Ä–æ–≤, —Å–µ—Ç–µ–π –∏ —Ç–æ–º–æ–≤...\n"
	$(DC) down -v --remove-orphans
	@echo -e "\n‚úÖ –û—á–∏—Å—Ç–∫–∞ –∑–∞–≤–µ—Ä—à–µ–Ω–∞.\n"

# –ü–æ–∫–∞–∑–∞—Ç—å –ª–æ–≥–∏ —Å–µ—Ä–≤–∏—Å–∞ (–ø–æ —É–º–æ–ª—á–∞–Ω–∏—é: api)
logs:
	@svc=$(if $(service),$(service),$(DEFAULT_SERVICE)); \
	echo -e "\nüìú [LOGS] –õ–æ–≥–∏ —Å–µ—Ä–≤–∏—Å–∞: $$svc (Ctrl+C –¥–ª—è –≤—ã—Ö–æ–¥–∞)\n"; \
	$(DC) logs -f $$svc

# –°–ø–∏—Å–æ–∫ –≤—Å–µ—Ö —Å–µ—Ä–≤–∏—Å–æ–≤
ps:
	@echo -e "\nüê≥ [PS] –°–ø–∏—Å–æ–∫ —Å–µ—Ä–≤–∏—Å–æ–≤ –∏ –∏—Ö —Å—Ç–∞—Ç—É—Å...\n"
	$(DC) ps

# –ü–æ–∫–∞–∑–∞—Ç—å –¥–æ—Å—Ç—É–ø–Ω—ã–µ –∫–æ–º–∞–Ω–¥—ã
help:
	@echo -e "\nüìñ –î–æ—Å—Ç—É–ø–Ω—ã–µ –∫–æ–º–∞–Ω–¥—ã:\n"
	@echo "  make up        –ó–∞–ø—É—Å—Ç–∏—Ç—å —Å–µ—Ä–≤–∏—Å—ã (–∏—Å–ø–æ–ª—å–∑–æ–≤–∞—Ç—å —Å–æ–±—Ä–∞–Ω–Ω—ã–µ –æ–±—Ä–∞–∑—ã)"
	@echo "  make build     –°–æ–±—Ä–∞—Ç—å –æ–±—Ä–∞–∑—ã"
	@echo "  make up-build  –°–æ–±—Ä–∞—Ç—å –æ–±—Ä–∞–∑—ã –∏ –∑–∞–ø—É—Å—Ç–∏—Ç—å —Å–µ—Ä–≤–∏—Å—ã"
	@echo "  make down      –û—Å—Ç–∞–Ω–æ–≤–∏—Ç—å —Å–µ—Ä–≤–∏—Å—ã"
	@echo "  make clean     –£–¥–∞–ª–∏—Ç—å –∫–æ–Ω—Ç–µ–π–Ω–µ—Ä—ã, —Å–µ—Ç–∏ –∏ —Ç–æ–º–∞"
	@echo "  make logs      –ü–æ–∫–∞–∑–∞—Ç—å –ª–æ–≥–∏ —Å–µ—Ä–≤–∏—Å–∞ (–ø–æ —É–º–æ–ª—á–∞–Ω–∏—é: api, –º–æ–∂–Ω–æ —É–∫–∞–∑–∞—Ç—å –¥—Ä—É–≥–æ–π —á–µ—Ä–µ–∑ 'make logs service=db')"
	@echo "  make ps        –°–ø–∏—Å–æ–∫ —Å–µ—Ä–≤–∏—Å–æ–≤ –∏ –∏—Ö —Å—Ç–∞—Ç—É—Å"
	@echo "  make help      –ü–æ–∫–∞–∑–∞—Ç—å —ç—Ç–æ —Å–æ–æ–±—â–µ–Ω–∏–µ"
	@echo ""
